@using Microsoft.AspNetCore.Identity
@using Models 
@inject SignInManager<ElixrUser> SignInManager
@inject UserManager<ElixrUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login/Sign up</a>
        </li>
    }
    <li>
        <a class="nav-link text-dark" asp-area="" asp-page="/Cart" title="View cart"><i class="fas fa-shopping-cart"></i> Cart</a>
    </li>
</ul>

