@page
@model ElixrMarket.Web.Pages.CheckoutModel
@{
}

<div id="checkout">
    <div id="cart-container">
        <h5 class="mb-4">Finalize Purchase</h5>
        <div id="item-list"></div>
    </div>
    <form method="post" asp-page-handler="Purchase" class="d-flex justify-content-end pt-3">
        <input id="checkout-items" type="hidden" name="checkoutItems" />
        <button type="submit" class="btn btn-primary text-white" align="right">Purchase</button>
    </form>
    <script src="~/js/display-cart.js"></script>
    <script src="~/js/checkout.js"></script>
    <script>displayCart(false)</script>
    <style>
        #checkout #cart-container {
            background-color: white;
            padding: 2rem;
            padding-bottom: .5rem;
        }

        #checkout #item-list {
            display: flex;
            flex-direction: column;
        }

        #checkout .product-container {
            padding: .5rem;
            display: flex;
            -webkit-align-items: center;
            align-items: center;
            -webkit-justify-content: flex-start;
            justify-content: flex-start;
            gap: 1rem;
            width: 100%;
            border-bottom: 1px solid #d9d9d9;
        }

        #checkout .info-container {
            flex-grow: 1;
            display: flex;
            gap: 1rem;
        }

            #checkout .info-container img {
                width: 8rem;
            }
    </style>
</div>