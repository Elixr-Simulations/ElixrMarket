@page
@model ElixrMarket.Web.Pages.ReviewerHomeModel
@{
}

<div id="reviewer-home">
    <div id="list-container">
        <div class="tab-pane fade show active" id="new" role="tabpanel" aria-labelledby="new-tab">
            @foreach (var product in Model.AssignedProducts)
            {
                string href = $"/Details/{product.Id}";

                <div class="product-container">
                    <input type="hidden" id="@product.Id-id" value="@product.Id" />
                    <input type="hidden" id="@product.Id-name" value="@product.Name" />
                    <input type="hidden" id="@product.Id-price" value="@product.Price" />
                    <a class="info-container" href="@href">
                        <div class="img-container">
                            <img src="@product.ThumbnailPath" alt="Thumbnail" />
                        </div>
                        <div class="name-container">
                            <span>@product.Name</span>
                        </div>
                    </a>
                    <div class="btn-group" role="group">
                        <a href="@product.BinaryPath" class="btn btn-primary download-btn">Download</a>
                        <a href="@href" class="btn btn-primary details-btn">Go to product page</a>
                    </div>
                </div>
            }
        </div>
    </div>

    <style>
        #reviewer-home #list-container {
            background-color: white;
        }

        #reviewer-home .product-container {
            padding: .5rem;
            display: flex;
            align-items: center;
            gap: 1rem;
            border-bottom: 1px solid #d9d9d9;
        }

            #reviewer-home .product-container:hover {
                background-color: #e9e9e9;
                cursor: pointer;
            }

        #reviewer-home .img-container {
            flex-grow: 0;
            height: 5rem;
        }

            #reviewer-home .img-container > img {
                height: 100%;
            }

        #reviewer-home .info-container {
            flex-grow: 1;
            display: flex;
            justify-content: flex-start;
            align-items: center;
            gap: 1rem;
        }

        #reviewer-home a {
            text-decoration: none;
            color: black;
        }

        .btn-group {
            border-radius: .5rem;
        }

            .btn-group > a {
                color: white !important;
            }

        .download-btn:hover {
            background-color: skyblue;
            border: 1px solid skyblue;
        }

        .details-btn {
            background-color: grey;
            border: 1px solid grey;
        }

            .details-btn:hover {
                background-color: darkgray;
                border: 1px solid darkgray;
            }

    </style>
</div>