@page
@model RegisterModel

@{
    ViewData["Title"] = "Sign up";
}

<div id="login">
    <div id="container">
        <form id="form-container" method="post">
            <h1 align="center">@ViewData["Title"]</h1>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input placeholder="Username" asp-for="Input.Username" class="form-control" />
                <span asp-validation-for="Input.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input placeholder="Email" asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input placeholder="Password" asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group mb-5">
                <input placeholder="Confirm Password" asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-main">Submit</button>
            </div>
        </form>
    </div>

    <style>
        #login #container {
            padding: 2rem;
            width: 40%;
            margin-top: 3rem;
            margin-left: auto;
            margin-right: auto;
            display: flex;
            flex-direction: column;
            align-items: center;
            background-color: white;
        }

        #login #form-container {
            width: 100%;
        }

            #login #form-container .form-group * {
                width: 100%;
            }

        #login #register-spacer {
            display: flex;
            width: 100%;
            align-items: center;
        }

            #login #register-spacer div {
                height: 1px;
                width: 60%;
                border-bottom: 1px solid grey;
                margin: .2rem .5rem 0 .5rem;
            }
    </style>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
