@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<div id="login">
    <div id="container">
        <form id="form-container" method="post">
            <h1 align="center">@ViewData["Title"]</h1>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input placeholder="Email" asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input placeholder="Password" asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div>
                <input asp-for="Input.RememberMe" />
                <label>Remember me?</label>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-main">Log in</button>
            </div>
            <p>
                <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
            </p>
        </form>
        <div class="mb-4" id="register-spacer">
            <div></div>
            <span>or</span>
            <div></div>
        </div>
        <div class="form-group">
            <p>
                <a class="btn btn-secondary" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Sign up</a>
            </p>
        </div>
    </div>

    <style>
        #login #container {
            padding: 2rem;
            width: 40%;
            margin-top: 3rem;
            margin-left: auto;
            margin-right: auto;
            display: flex;
            flex-direction: column;
            align-items: center;
            background-color: white;
        }

        #login #form-container {
            width: 100%;
        }

        #login #form-container .form-group * {
            width: 100%;
        }

        #login #register-spacer {
            display: flex;
            width: 100%;
            align-items: center;
        }

        #forgot-password {
            color: var(--primary-color);
        }

            #login #register-spacer div {
                height: 1px;
                width: 60%;
                border-bottom: 1px solid grey;
                margin: .2rem .5rem 0 .5rem;
            }
    </style>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
